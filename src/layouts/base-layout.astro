---
import { ViewTransitions } from "astro:transitions";

import "@/styles/global.css";
import "@/styles/mathjax.css";
import "@/styles/rehype-github-alerts.css";
import Favicon from "@/components/head/favicon.astro";
import Meta from "@/components/head/meta.astro";
import Moon from "@/components/icons/moon.astro";
import Rss from "@/components/icons/rss.astro";
import LanguagePicker from "@/components/language-picker.astro";

import {
  getLangFromUrl,
  useTranslatedPath,
  useTranslations,
  type Lang,
} from "@/utils/i18n";
import { SITE } from "@/config";

const { title, description } = Astro.props;
const [lang] = getLangFromUrl(Astro.url.pathname);
const t = useTranslations(lang as Lang);
const translatePath = useTranslatedPath(lang as Lang);
const pageTitle = title
  ? `${title} | ${SITE.title[lang as Lang]}`
  : `${SITE.title[lang as Lang]} | ${SITE.description[lang as Lang]}`;
---

<html lang={lang} class="scroll-smooth">
  <head>
    <Meta lang={lang} description={description} pageTitle={pageTitle} />
    <Favicon />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE.title[lang as Lang]}
      href={new URL("rss.xml", SITE.url)}
    />
    <script
      is:inline
      type="text/partytown"
      src="https://cloud.umami.is/script.js"
      data-website-id={SITE.analytics.umami.id}></script>
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-dracula-darker text-dracula-light mx-4 md:mx-auto max-w-3xl py-12"
  >
    <header
      class="mb-14 flex flex-col gap-2 justify-center md:flex-row md:justify-between md:items-center"
    >
      <div class="flex gap-2 itmes-center justify-center">
        <a
          href={translatePath("/")}
          class="flex items-center justify-center md:justify-start gap-2 font-black text-2xl
          text-dracula-light hover:text-dracula-pink transition"
        >
          <Moon />
          <h1 class="font-black text-2xl">
            {SITE.title[lang as Lang]}
          </h1>
        </a>
        <a
          href="/rss.xml"
          class="hover:text-dracula-orange transition"
          aria-label="RSS Feed"
        >
          <Rss class="w-6 h-6" />
        </a>
      </div>
      <div
        class="flex justify-center md:justify-end items-center gap-4 text-dracula-light"
      >
        <a
          class="hover:text-dracula-pink transition underline underline-offset-4"
          href={translatePath("/")}
        >
          {t("nav.home")}
        </a>
        <a
          class="hover:text-dracula-pink transition underline underline-offset-4"
          href={translatePath("/tags")}
        >
          {t("nav.tags")}
        </a>
        <a
          class="hover:text-dracula-pink transition underline underline-offset-4"
          href={translatePath("/about")}
        >
          {t("nav.about")}
        </a>
        |
        <LanguagePicker />
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="mt-14 flex flex-col items-center gap-2 w-full">
      <p class="text-lg">
        {SITE.title[lang as Lang]}
      </p>
      <p class="text-sm">
        Powered by
        <a
          href="https://astro.build/"
          target="_blank"
          rel="nofollow"
          class="hover:text-dracula-pink transition">Astro</a
        >
        {" & "}
        <a
          href="https://github.com/BlockLune/astro-dracula-blog/"
          target="_blank"
          rel="nofollow"
          class="hover:text-dracula-pink transition">AstroDraculaBlog</a
        >
      </p>
    </footer>
  </body>
</html>
