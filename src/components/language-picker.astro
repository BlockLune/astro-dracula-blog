---
import { languages } from "@/utils/i18n";
import { getLangFromUrl, useTranslatedPath } from "@/utils/i18n";

const [lang, urlWithoutLang] = getLangFromUrl(Astro.url.pathname);
const translatePath = useTranslatedPath(lang as keyof typeof languages);
---

<ul>
  {
    Object.entries(languages).map(([lang, label]) => (
      <li>
        <a href={translatePath(`/${urlWithoutLang}`, lang)}>{label}</a>
      </li>
    ))
  }
</ul>
