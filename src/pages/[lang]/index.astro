---
import { getCollection } from "astro:content";
import DynamicPostStack from "@/components/ui/dynamic-post-stack";
import BaseLayout from "@/layouts/base-layout.astro";
import { supportedLangs } from "@/utils/i18n";
import { getSnapshots } from "@/utils/post";

const posts = await getCollection("posts");

const { lang } = Astro.params;
const snapshots = await getSnapshots(posts, lang);

export function getStaticPaths() {
  return supportedLangs.map((lang) => ({
    params: { lang },
  }));
}
---

<BaseLayout>
  <DynamicPostStack
    lang={lang}
    initialSnapshots={snapshots.slice(0, 5)}
    totalPostCount={snapshots.length}
    client:load
  />
</BaseLayout>
