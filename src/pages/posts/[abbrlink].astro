---
import { getCollection } from "astro:content";
import { getPostsFilteredByLang } from "@scripts/utils";
import { defaultLang } from "@i18n/ui";

export async function getStaticPaths() {
  const postsWithAbbrlink = await getCollection(
    "posts",
    (post) => post.data.abbrlink,
  );

  const filtered = await getPostsFilteredByLang(postsWithAbbrlink, defaultLang);

  const paths = filtered.map((post) => {
    const [lang, ...rest] = post.slug.split("/");
    const slugWithoutLang = rest.join("/");
    return {
      params: { abbrlink: post.data.abbrlink },
      props: { to: `${lang}/posts/${slugWithoutLang}` },
    };
  });

  return paths;
}

const { to } = Astro.props;
return Astro.rewrite(to);
